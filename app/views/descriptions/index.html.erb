<div class="container">
  <div class="container tab-pane active">
    <h5 style="margin-top:15px">ENTER A DESCRIPTION</h5>
    <div class="input-group" style="margin-top: 20px">
      <%= form_for :description, url: '/' do |f| %>
        <%= text_area_tag :description, "", cols: 80, rows: 10%>
        <%= f.submit "Submit", class: "btn btn-dark"%>
      <% end %>
    </div>
  </div>
</div>
