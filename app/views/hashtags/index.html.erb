<div class="container">
  <div id="hashtag" class="container tab-pane active">
    <h5 style="margin-top:15px">ENTER HASHTAGS</h5>
    <div class="input-group" style="margin-top: 20px">
      <%= form_for :hashtag, url: '/hashtag' do |f| %>
        <%= text_area_tag :hashtag, params[:hashtag], cols: 80, rows: 6%>
        <%= f.submit "Submit", class: "btn btn-dark"%>
      <% end %>
    </div>
  </div>
  
  <div class="pl-3 mt-5">
    <% if @hash.present? %>
      <table class="table w-50">
        <thead class="thead-dark">
          <th>Hashtag</th>
          <th>Occurrences</th>
        </thead>
        <tbody>
          <%@hash.keys.each do |h|%>
            <tr>
              <td><%="##{h}"%></td>
              <td><%=@hash[h]%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
